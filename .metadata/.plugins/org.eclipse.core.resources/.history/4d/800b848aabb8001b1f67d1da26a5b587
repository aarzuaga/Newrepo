		// bob.read(new Book("title"));
		// Books history = new Books();
		// wrapper classes within primitive data type
		// runner class=<runner data type
		// wrapper rules: no default val. only null and they start with Uppercase

		Integer y = 0;

		System.out.println(x.replace("Cat", "Car"));

		String str1 = "yesterday it was raining";
		String str2 = "today it was sunny";
		System.out.println(str2.toUpperCase() + "," + str1.toUpperCase());
		
		String mySubString1 = str2.substring(0, 12);
		String mySubString2 = str1.substring(16, 24);
		System.out.println(mySubString1 + mySubString2);
		
		String mySubString3 = str1.substring(0, 10);
		String mySubString4 = str2.substring(4, 18);
		System.out.println(mySubString3 + mySubString4);

		System.out.println("finish");
