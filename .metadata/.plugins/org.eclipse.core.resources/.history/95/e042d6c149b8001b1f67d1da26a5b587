package com.qa.java;

import com.qa.java.basics.Sprinter;

public class Runner {

	public static void main(String[] args) {
		operators();
		conditionals();
		arrays();
		switches();
		method();

	}

	public static void operators() {
		System.out.println("Hello World");
		double lines;
		lines = Sprinter.div(8, 2);
		if (lines > 3) {
			System.out.println("Correct");
		}
		System.out.println(lines);

	}

	public static void printThese(int num1, int num2) {
		System.out.println(num1);
		System.out.println(num2);

	}

	public static void switches() {
		int day = 5;

		switch (day) {
		case 1:
			System.out.println("Monday");
			break;
		case 2:
			System.out.println("Tuesday");
			break;
		case 3:
			System.out.println("Wednesday");
			break;
		case 4:
			System.out.println("Thursday");
			break;
		case 5:
			System.out.println("Friday");
			break;
		case 6:
			System.out.println("Saturday");
			break;
		case 7:
			System.out.println("Sunday");
			break;
		case 8:
			System.out.println("does not exist");
			break;

		}

	}

	public static void conditionals() {
		int number = 10;
		if (number >= 10) {
			System.out.println("Number is equal to 10");

		} else {
			System.out.println("Number is not equal to 10");

		}

	}
	


	public static void arrays() {

		int[] grid = { 3, 5, 101 };

		System.out.println(grid[0]);

		grid[0] = 10;

		System.out.println(grid[0]);
		System.out.println(grid[1]);
		System.out.println(grid[2]);

	}

	public static void method() {
		System.out.println("Starting Task");
		int[] array = new int[10]; 
		
		for(int x = 0; x < array.length; x++) {
			array[x] = x + 1;
			System.out.println(array[x] + " "); 
			
		}
	}
	
}



